{
  "compilerOptions": {
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "spec",
    "sourceMap": true,
    "strict": true,
    "target": "es2016",
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "listEmittedFiles": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.spec.ts"
  ],
  "exclude": [
    "../node_modules"
  ]
}